            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.cavanhaman.ceprest.BuscaCep" android:label="@string/app_busca"></activity>
        <activity android:name="com.cavanhaman.ceprest.Detalhes"  android:label="@string/app_detalhes"></activity>
        <activity android:name="com.cavanhaman.ceprest.Lista" android:label="@string/app_histori"></activity>
    </application>

</manifest>
